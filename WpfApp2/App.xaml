<Application x:Class="WpfApp2.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WpfApp2"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <SolidColorBrush x:Key="ColorMain" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="ColorDop" Color="#FFCC99"/>
        <SolidColorBrush x:Key="AccentVnimanie" Color="#FFCC6600"/>
        <Style TargetType="TextBlock">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontFamily" Value="Gabriola"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="Black"/>

        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="{DynamicResource ColorMain}"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="VerticalContentAlignment" Value="Top" />


        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="{DynamicResource AccentVnimanie}"/>

        </Style>
    </Application.Resources>

</Application>

